{{#partial "styles"}}
    <link rel="stylesheet" href="/css/squad.css">
{{/ partial}}

{{#partial "content"}}
    <h2>BUILD A NEW SQUAD HERE</h2>
    <form action="/squad" method="post">
        <div class="form-group">
            <label for="squadName">Name</label>
            <input type="text" class="form-control" name="squadName" id="squadName" placeholder="Name of your squad" required>
        </div>

        <div class="form-group">
            <label for="squadCause">Cause</label>
            <input type="text" class="form-control" name="squadCause" id="squadCause" placeholder="what cause is the squad fighting against?" required>
        </div>

        <div class="form-group">
            <label for="squadSize">Size Limit</label>
            <input type="number" class="form-control" name="squadSize" id="squadSize" placeholder="Number of heroes in the squad" required>
        </div>

        <button type="submit" class="btn btn-info my-2 my-sm-0">Build Squad</button>

    </form>
{{/partial}}

{{> homepage.hbs}}