{{#partial "styles"}}

    <link rel='stylesheet' href='/css/hero.css'>

{{/partial}}

{{#partial "content"}}

    <div class="container">
        <h2>BUILD YOUR SUPER HERO HERE</h2>
        <form action="/hero" method="post">
            <div class="form-group">
                <label for="name">Heroes Name</label>
                <input type="text" class="form-control" name="heroName" id="heroName" placeholder="Name of the hero" required>
            </div>

            <div class="form-group">
                <label for="age">Age</label>
                <input type="number" class="form-control" name="heroAge" id="heroAge" placeholder="Age of the hero" required>
            </div>

            <div class="form-group">
                <label for="power">Power</label>
                <input type="text" class="form-control" name="heroPower" id="heroPower" placeholder="Power of the hero" required>
            </div>

            <div class="form-group">
                <label for="strength">Strength</label>
                <input type="text" class="form-control" name="heroStrength" id="heroStrength" placeholder="Strenght of the hero" required>
            </div>

            <div class="form-group">
                <label for="weakness">Weakness</label>
                <input type="text" class="form-control" name="heroWeakness" id="heroWeakness" placeholder="Weakness of the hero" required>
            </div>

            <button type="submit" class="btn btn-info my-2 my-sm-0">Build Hero</button>

        </form>
    </div>

{{/partial}}

{{> homepage.hbs}}